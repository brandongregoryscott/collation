{
    "author": {
        "name": "Brandon Scott",
        "url": "https://github.com/brandongregoryscott"
    },
    "bin": {
        "collation": "dist/collation.js"
    },
    "dependencies": {
        "chalk": "5.0.0",
        "commander": "8.3.0",
        "fuzzaldrin": "2.1.0",
        "lodash": "4.17.21",
        "ts-morph": "13.0.2"
    },
    "description": "Code linting/manipulation tools to make your TypeScript code easier to read",
    "devDependencies": {
        "@types/common-tags": "1.8.1",
        "@types/fuzzaldrin": "2.1.4",
        "@types/jest": "27.0.3",
        "@types/lodash": "4.14.178",
        "@types/react": "17.0.37",
        "common-tags": "1.8.2",
        "esbuild": "0.14.5",
        "jest": "27.4.5",
        "prettier": "2.5.1",
        "rimraf": "3.0.2",
        "ts-jest": "27.1.2",
        "typescript": "4.5.4"
    },
    "engines": {
        "node": ">=14"
    },
    "files": [
        "dist"
    ],
    "keywords": [
        "code-style",
        "codegen",
        "codemod",
        "format",
        "lint",
        "react",
        "typescript"
    ],
    "license": "Apache-2.0",
    "main": "dist/collation.js",
    "name": "collation",
    "repository": {
        "type": "git",
        "url": "git@github.com:brandongregoryscott/collation.git"
    },
    "scripts": {
        "build": "npm run esbuild -- --sourcemap --external:commander --external:lodash --external:shelljs --external:ts-morph --external:fuzzaldrin",
        "build:dist": "npm run esbuild -- --minify",
        "build:watch": "npm run esbuild -- --sourcemap --watch",
        "clean": "rimraf dist",
        "esbuild": "esbuild src/collation.ts --bundle --outfile=dist/collation.js --platform=node --external:ts-morph",
        "prebuild": "npm run clean",
        "prebuild:dist": "npm run clean",
        "prebuild:watch": "npm run clean",
        "prepublishOnly": "npm run build:dist",
        "prestart": "npm run build",
        "start": "./dist/collation.js",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "version": "0.0.2"
}
