{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["ES2021", "DOM"],
        "module": "Node16",
        "moduleResolution": "Node16",
        "outDir": "dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2021"
    },
    "include": ["src"]
}
